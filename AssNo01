
#include <stdio.h>
#include <string.h>

struct student
{
   int roll_no;
   char name[20];
   
};
 
 

 int main()
 {
 
 struct student b[3];
 int i,size,choice,update,number,r,position,found;
 char newname,ch;
 
 do
 {
    printf(" \n MENU");
    printf("\n 1.Enter students record");
    printf("\n 2.Display students record");
    printf("\n 3.Insert students record");
    printf("\n 4.Update students record");
    printf("\n 5.Delete students record");
    printf("\n 6.Exit\n");
    printf("\n Enter your choice:");
    scanf("%d",&choice);
   
    
 switch(choice)
 {
   case 1: 
           printf("Enter total no of students:");
           scanf("%d",&size);
           
           printf("\n Enter students record\n");
           for(i=0;i<size;i++)
           {
              printf("\n Enter roll no:");
              scanf("%d",&b[i].roll_no);
              printf("\n Enter name:");
              scanf("%s",&b[i].name);
           }
           break;
           
  case 2: printf("\n Students Information:");
          for(i=0;i<size;i++)
          {
             printf("\n Roll no:%d\t Name:%s\n",b[i].roll_no,b[i].name); 
          }
          break;
          
  case 3: printf("\n Enter position to be inserted:",size);
          scanf("%d",&position);
          for(i=size;i>position;i--)
          {
             b[i]=b[i-1];
          }        
       
          printf("\n Information inserted successfully!");
          
          printf("\n Enter new roll no:");
          scanf("%d",&b[position].roll_no);
          printf("\n Enter new name:");
          scanf("%s",b[position].name);
           break;
   case 4:printf("\n Enter roll no to update:");
          scanf("%d",& update);
          if(b[i].roll_no==update);
          {
            found;
          }
          printf("\n Enter new roll no:");
          scanf("%d", &number);
          b[i].roll_no==number;
          printf("\n Enter new name:");
          scanf("%s", newname);
          strcpy(b[i].name,newname);
          
          printf("\n Record updated successfully!");
          break;
          
          printf("\n Updated students record:");
          for(i=0;i<size;i++)
          {
             scanf("\n Roll no:%d\t Name:%s\n",b[i].roll_no,b[i].name); 
          }
   case 5:printf("\n Enter roll no to delete:");
         scanf("%d",&r);
          found=0;
         for(i=0;i<size;i++)
         {
            if(b[i].roll_no==r)
              {
                 position=i;
                 found=1;
                 break;
              }
         }
        if(found)
        {
        
          for(i=position;i<size-1;i++)
            { 
               b[i]=b[i+1];
             }
              
        }  
        size--;
        printf("\n Roll no deleted successfully!");
        
        printf("\n Updated students record:");
        for(i=0;i<size;i++)
          {
             scanf("\n Roll no:%d\t Name:%s\n",b[i].roll_no,b[i].name); 
          }
        break;
 
  case 6:printf("\n Wrong choice");
         break;
         
  }     
 
 printf("\n Do you want to continue(Y/N):");
 scanf("%s",&ch);
    
   }while(ch=='y'||ch=='Y');

return 0;
}


